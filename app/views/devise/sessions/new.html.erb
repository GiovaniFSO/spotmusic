<div class="columns is-mobile is-centered">
  <div class="column is-three-quarters-mobile">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :email, class:"has-text-white"%><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
      </div>
    
      <div class="field ">
      
        <%= f.label :password, 'Senha', class:"has-text-white" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"input", type:"password" %>
      </div>
  
      <% if devise_mapping.rememberable? -%>
        <div class="field ">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"has-text-white"%>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class:"button is-outlined is-white"%>
      </div>
    <% end %>      
  </div>
</div>
<div class="has-text-centered has-text-primary">
  <%= render "devise/shared/links" %>
</div>